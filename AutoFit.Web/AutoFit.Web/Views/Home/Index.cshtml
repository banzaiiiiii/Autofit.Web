@using AutoFit.Web.ViewModels
@model AutoFit.Web.ViewModels.HomeIndexViewModel
@{
    ViewBag.Title = "AutoFit Seidel";
}
<div class="jumbotron">
    <h1>Willkommen bei Seidel </h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExample" class="carousel slide" data-ride="carousel" data-interval="false">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid setImageHeight" src="images/autofit rochlitz.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid setImageHeight" src="images/autofitLogo.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid setImageHeight" src="images/bmw.jpg" alt="Third slide">
                    </div>
                    <p class="linkToWebsite">
                        <i class="fas fa-chevron-right"></i>
                        <a asp-controller="AutoFit" asp-action="Index" class="badge badge-primary">
                            AutoFit Seidel Rochlitz
                        </a>
                    </p>
                </div>
                <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div id="carouselExample2" class="carousel slide" data-ride="carousel" data-interval="false">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 setImageHeight" src="images/bmw.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 setImageHeight" src="images/autofitLogo.png" alt="Second slide">
                    </div>
                </div>
                <p class="linkToWebsite">
                    <i class="fas fa-chevron-right"></i>
                    <a asp-controller="AutoService" asp-action="Index" class="badge badge-primary">
                        AutoService Seidel Burgstädt
                    </a>
                </p>
                <a class="carousel-control-prev" href="#carouselExample2" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExample2" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>
<div id="leistungenView">@await Html.PartialAsync("_leistungen")</div>




