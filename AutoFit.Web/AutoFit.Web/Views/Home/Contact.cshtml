@model AutoFit.Web.Data.Contact

@{
    ViewData["Title"] = "Contact";
}

<h1> Kontaktformular</h1>

<div>
    <form method="post">
        <div class="form-group">
            <label asp-for="FirstName">Firstname</label>
            <input asp-for="FirstName" class="form-control" placeholder="Vorname">
        </div>
        <div class="form-group">
            <label asp-for="LastName">Lastname</label>
            <input asp-for="LastName" class="form-control" placeholder="Nachname">
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Email">
        </div>
        <div class="form-group">
            <label asp-for="Subject">Thema</label>
            <input asp-for="Subject" class="form-control" placeholder="Thema eingeben">
        </div>
        <div class="form-group">
            <label asp-for="Message">Nachricht</label>
            <input asp-for="Message" class="form-control" placeholder="Ihre Nachricht eingeben">
        </div>
        <button type="submit" onclick="SendEmail()" class="btn btn-primary">Senden</button>
        @*<a class="btn btn-danger" onclick="SendEmail()">Sende Email</a>*@
    </form>
    

</div>
<script>
    var SendEmail = function() {
        $.ajax({
            url: "/HOME/SendEmailToMe",
            type: "POST",
            success: function (data) {
                alert("Sucess");
            }
        })
    }
    
</script>