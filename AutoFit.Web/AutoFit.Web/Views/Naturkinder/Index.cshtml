@{
    Layout = "~/Views/Shared/_LayoutNaturKinder.cshtml";
}
<body>
<div class="container-fluid">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Willkommen bei den Naturkindern Weißbach</h1>
            <hr class="my-4">
            <p>Katzen, Kinder und Bäume</p>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div id="carouselNaturkinder" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselNaturkinder" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselNaturkinder" data-slide-to="1"></li>
                        <li data-target="#carouselNaturkinder" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100 setImageHeight" src="~/images/naturkinder2.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100 setImageHeight" src="~/images/findus_TestBild.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100 setImageHeight" src="~/images/naturkinder1.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselNaturkinder" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselNaturkinder" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
      </div>
    
</div>





       


  

</body>