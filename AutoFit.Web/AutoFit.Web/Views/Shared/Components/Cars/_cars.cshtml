
@model AutoFit.Web.ViewModels.Files.FilesViewModel

@{

}


<h1> Hier Fahrzeugbestandliste</h1>

<div class="container">

    @foreach (var item in Model.Container)
    {
        foreach (var file in item.FileNameList)
        {
            @*<a asp-controller="Files" asp-action="Index"> <img src="@file"  /> </a>*@
            <div class="container fahrzeugBilderDiv">
                <img id="fahrzeugsBestandlisteIMG" src="@file.Uri" />
            </div>

            foreach (var data in file.Metadata.Values)
            {
                <h1>@data.Replace("=", ":").Replace("Euro", "€").Replace("euro", "€")</h1>
            }


        }
    }

</div>

<div class="container">
    <div id="carouselExample" class="carousel slide" data-ride="carousel" >
        <ul class="carousel-indicators">
            <li data-target="#carouselExample" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExample" data-slide-to="1"></li>
            <li data-target="#carouselExample" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
            @{int i = 0;}
            @foreach (var item in Model.Container)
            {
                foreach (var file in item.FileNameList)
                {
                    i++;
                    var active = i == 1 ? "active" : "";
                    <div class="carousel-item @active">
                        <img class="d-block img-fluid setImageHeight" src="@file.Uri">
                    </div>
                }
            }

        </div>
        <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>