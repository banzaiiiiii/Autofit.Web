
@model AutoFit.Web.ViewModels.Files.FilesViewModel

@{

}
<div class="d-flex flex-column container top_padding">

    <div class="p-2">
        <h1> Unsere Leihwagenflotte</h1>
        <h6> Wenn ihr Auto bei uns zur Reparatur ist bekommen Sie einen Leihwagen zur Verfügung gestellt </h6>
        <div class="p-2"></div>
        @foreach (var item in Model.ContainerDetailsList)
        {
            if (item.ContainerName.Contains("leihwagen"))
            {
                <div id="carouselExample" class="carousel slide" data-ride="carousel">
                    <ul class="carousel-indicators">
                        <li data-target="#carouselExample" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExample" data-slide-to="1"></li>
                        <li data-target="#carouselExample" data-slide-to="2"></li>
                    </ul>
                    <div class="carousel-inner">
                        @{int i = 0;}

                        @foreach (var file in item.FileNameList)
                        {
                            i++;
                            var active = i == 1 ? "active" : "";
                            <div class="carousel-item @active">
                                <img class="d-block img-fluid setImageSize" src="@file.Uri">
                            </div>
                        }
                    </div>



                    <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="p-2" id="azureMetadata">
                    @if (item.ContainerMetadata.Count == 0)
                    {
                        <p>keine Informationen vorhanden!</p>
                    }
                    else
                    {
                       <p>Einstelldatum: @item.ContainerMetadata["LastUpdated"]</p> 
                       <p>Fahrzeug Bezeichnung: @item.ContainerMetadata["Name"]</p> 
                    }
                </div>
            }
        }


    </div>
    <div class="p-2">
        <h1> Unsere Gebrauchtwagen</h1>
        <h6>  Diese Fahrzeuge stehen zum Verkauf bereit. </h6>
        <h6>  Kontaktieren Sie uns über das <a asp-controller="HOme" asp-action="Contact"> <span class="red_links">> </span>Kontaktformular </a>oder per Email an info@autofitseidel.de</h6>
        @foreach (var item in Model.ContainerDetailsList)
        {
            if (item.ContainerName.Contains("auto"))
            {

                <div id="carouselExample" class="carousel slide" data-ride="carousel">
                    <ul class="carousel-indicators">
                        <li data-target="#carouselExample" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExample" data-slide-to="1"></li>
                        <li data-target="#carouselExample" data-slide-to="2"></li>
                    </ul>

                    <div class="carousel-inner">
                        @{int i = 0;}

                        @foreach (var file in item.FileNameList)
                        {
                            i++;
                            var active = i == 1 ? "active" : "";
                            <div class="carousel-item @active">
                                <img class="d-block img-fluid setImageSize" src="@file.Uri">
                            </div>
                        }
                    </div>

                    <div id="azureMetadata">
                        @if (item.ContainerMetadata.Count == 0)
                        {
                            <p>keine Informationen vorhanden!</p>
                        }
                        else
                        {
                            <p>Einstelldatum: @item.ContainerMetadata["LastUpdated"]</p>
                            <p>Fahrzeug Bezeichnung: @item.ContainerMetadata["Name"]</p>
                            <p>Preis: @item.ContainerMetadata["Preis"].Replace("=", ":")€</p>
                        }

                    </div>

                    <a class="carousel-control-prev" href="#carouselExample" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExample" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            }
        }
    </div>
</div>
